<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"

    android:padding="@dimen/_10sdp"
    android:layout_margin="@dimen/_10sdp">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:id="@+id/relative"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toStartOf="@+id/linearLayout">

            <TextView
                android:id="@+id/thing_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thing name"
                android:paddingStart="@dimen/_10sdp"
                android:textStyle="bold|italic"
                android:textColor="@color/textColorPrimary"
                android:textSize="@dimen/_14sdp"
                />


            <RelativeLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                >

                <TextView
                    android:id="@+id/thing_description_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thing Description From DB"
                    android:paddingStart="12dp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_marginStart="@dimen/_20sdp">

                <ImageButton
                    android:id="@+id/timeIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:padding="5dp"
                    android:src="@android:drawable/presence_away"
                    />



                <TextView
                    android:id="@+id/thing_date_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Time And Date From DB"
                    android:textSize="@dimen/_10sdp"
                    android:paddingStart="5dp"
                    android:layout_toEndOf="@+id/timeIcon"/>

            </RelativeLayout>

        </LinearLayout>






        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentEnd="true">

            <ImageView
                android:id="@+id/thing_delete_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@android:drawable/ic_delete"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                />


            <ImageView
                android:id="@+id/thing_edit_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:src="@android:drawable/ic_menu_edit"
                />

        </LinearLayout>

    </RelativeLayout>


</RelativeLayout>
